    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D1D1D1"
                android:textSize="30sp"
                android:text="Discounts"
                android:paddingBottom="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Laws of power"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="131dp"
                        android:padding="16dp"
                        android:text="The 48 Laws of Power is a non-fiction book by American author Robert Greene. "
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/lawpowerbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="OPEN"
                            android:textColor="#455A64"
                            android:textSize="15sp" />
                        <Button
                            android:id="@+id/lawpowerSharebtn"
                            android:layout_width="40dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="25dp"
                            android:drawableBottom="@drawable/ic_baseline_share_24"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity=""
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Good strategy"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="134dp"
                        android:padding="7dp"
                        android:text="Even though everyone is talking about it, there is no concept in business today more muddled than 'strategy'."
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"

                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/goodstratbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="OPEN"
                            android:textColor="#455A64"
                            android:textSize="15sp" />
                        <Button
                            android:id="@+id/goodstratbtnShare"
                            android:layout_width="40dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="25dp"
                            android:drawableBottom="@drawable/ic_baseline_share_24"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Thinking strategically"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="132dp"
                        android:padding="7dp"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:text="The Competitive Edge in Business, Politics, and Everyday Life is a non-fiction book by Indian-American economist Avinash Dixit and Barry Nalebuff."
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/thinkingstratbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="15$"
                            android:textColor="#455A64"
                            android:textSize="15sp" />
                        <Button
                            android:id="@+id/thinkingstratSharebtn"
                            android:layout_width="40dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="25dp"
                            android:drawableBottom="@drawable/ic_baseline_share_24"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dune"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:padding="7dp"
                        android:text="Dune is a 1965 epic science fiction novel by American author Frank Herbert, originally published as two separate serials in Analog magazine."
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/dunebtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="20$"
                            android:textColor="#455A64"
                            android:textSize="15sp" />
                        <Button
                            android:id="@+id/duneSharebtn"
                            android:layout_width="40dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="25dp"
                            android:drawableBottom="@drawable/ic_baseline_share_24"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="161dp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/a7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Stolen"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:padding="7dp"
                        android:text="Stolen is the debut novel of author Lucy Christopher. It was published in the UK in 2009 and is the story of Gemma Toombs,..."
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/stolenbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="9$"
                            android:textColor="#455A64"
                            android:textSize="15sp" />
                        <Button
                            android:id="@+id/stolenSharebtn"
                            android:layout_width="40dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="25dp"
                            android:drawableBottom="@drawable/ic_baseline_share_24"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>